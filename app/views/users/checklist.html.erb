<div id="checkListBox" class="box">
	<div class="title">Checklist</div>
	
	<!-- Nav tabs -->
	<ul id="checkListNav" class="nav nav-tabs nav-justified" role="tablist">
		<li class="active"><a href="#lenderPane" role="tab" data-toggle="tab">Lender</a></li>
		<li><a href="#lendeePane" role="tab" data-toggle="tab">Lendee</a></li>
	</ul>

	<!-- Tab panes -->
	<div class="tab-content">

		<!-- LENDER CHECKLIST -->	
		<% if current_user.lender? %>
			<%= render 'users/checklist/lender_checklist' %>
		<% end %>

		<!-- LENDEE CHECKLIST -->
		<%= render 'users/checklist/lendee_checklist' %>
	</div>
</div>